{
  "name": "vscode-extension-develop-helper",
  "displayName": "VSCode Extension Develop Helper",
  "description": "A helper tool for VSCode extension development that visualizes package.json configurations",
  "version": "0.1.21",
  "publisher": "1risW",
  "author": "1risW",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/irisWirisW/vscode-extension-develop-helper.git"
  },
  "keywords": [
    "vscode",
    "extension",
    "development",
    "helper",
    "package.json"
  ],
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "vedh",
          "title": "插件开发助手",
          "icon": "resources/icon/icon.svg"
        }
      ]
    },
    "views": {
      "vedh": [
        {
          "id": "vedh.views",
          "name": "view管理"
        },
        {
          "id": "vedh.commands",
          "name": "commands管理"
        }
      ],
      "test": [
        {
          "id": "test.1",
          "name": "这是测试1"
        },
        {
          "id": "test.2",
          "name": "这是测试2"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "vedh.refresh",
          "when": "view == vedh.views",
          "group": "navigation"
        },
        {
          "command": "vedh.refresh",
          "when": "view == vedh.views"
        },
        {
          "command": "vedh.refreshCommands",
          "when": "view == vedh.commands",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "vedh.editNode",
          "when": "view == vedh.views",
          "group": "inline"
        },
        {
          "command": "vedh.editCommand",
          "when": "view == vedh.commands && viewItem == command",
          "group": "inline"
        },
        {
          "command": "vedh.editCommand",
          "when": "view == vedh.commands && viewItem == property",
          "group": "inline"
        },
        {
          "command": "vedh.copyCommandId",
          "when": "view == vedh.commands && viewItem == command",
          "group": "copy"
        },
        {
          "command": "vedh.copyCommandConfig",
          "when": "view == vedh.commands && viewItem == command",
          "group": "copy"
        }
      ]
    },
    "commands": [
      {
        "command": "vedh.refresh",
        "title": "Refresh",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      },
      {
        "command": "vedh.refreshCommands",
        "title": "Refresh Commands",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      },
      {
        "command": "vedh.edit",
        "title": "Edit",
        "icon": {
          "light": "resources/light/edit.svg",
          "dark": "resources/dark/edit.svg"
        }
      },
      {
        "command": "vedh.editNode",
        "title": "Edit Node",
        "icon": {
          "light": "resources/light/edit.svg",
          "dark": "resources/dark/edit.svg"
        }
      },
      {
        "command": "vedh.editCommand",
        "title": "Edit Command",
        "icon": {
          "light": "resources/light/edit.svg",
          "dark": "resources/dark/edit.svg"
        }
      },
      {
        "command": "vedh.copyCommandId",
        "title": "复制命令 ID",
        "icon": "$(copy)"
      },
      {
        "command": "vedh.copyCommandConfig",
        "title": "复制命令配置",
        "icon": "$(json)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "clean": "rm -rf out",
    "rebuild": "npm run clean && npm run compile",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "test": "vscode-test",
    "package": "vsce package --allow-missing-repository -o ./out",
    "update-version": "node updateVersion.js && npm run package"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.8",
    "@types/node": "20.x",
    "@types/vscode": "^1.94.0",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^3.0.0",
    "eslint": "^9.11.1",
    "typescript": "^5.5.1-rc"
  }
}