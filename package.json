{
  "name": "vscode-extension-develop-helper",
  "displayName": "VSCode Extension Develop Helper",
  "description": "A helper tool for VSCode extension development that visualizes package.json configurations",
  "version": "0.1.23",
  "publisher": "1risW",
  "author": "1risW",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/irisWirisW/vscode-extension-develop-helper.git"
  },
  "keywords": [
    "vscode",
    "extension",
    "development",
    "helper",
    "package.json"
  ],
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "vedh",
          "title": "插件开发助手",
          "icon": "resources/icon/icon.svg"
        }
      ]
    },
    "views": {
      "vedh": [
        {
          "id": "vedh.viewsContainers",
          "name": "viewsContainers管理",
          "when": "resourceFilename == package.json",
          "collapsible": "collapsed",
          "icon": "resources/icon/icon.svg"
        },
        {
          "id": "vedh.views",
          "name": "views管理",
          "when": "resourceFilename == package.json",
          "collapsible": "collapsed",
          "icon": "resources/icon/icon.svg"
        },
        {
          "id": "vedh.commands",
          "name": "commands管理",
          "when": "resourceFilename == package.json",
          "collapsible": "collapsed",
          "icon": "resources/icon/icon.svg"
        },
        {
          "id": "vedh.menus",
          "name": "menus管理",
          "collapsible": "collapsed",
          "icon": "resources/icon/icon.svg"
        }
      ],
      "test": [
        {
          "id": "test.1",
          "name": "这是测试1"
        },
        {
          "id": "test.2",
          "name": "这是测试2"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "vedh.refreshViewsContainers",
          "when": "view == vedh.viewsContainers",
          "group": "navigation"
        },
        {
          "command": "vedh.refresh",
          "when": "view == vedh.views",
          "group": "navigation"
        },
        {
          "command": "vedh.refreshCommands",
          "when": "view == vedh.commands",
          "group": "navigation"
        },
        {
          "command": "vedh.refreshMenus",
          "when": "view == vedh.menus",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "vedh.editViewContainer",
          "when": "view == vedh.viewsContainers && viewItem == container",
          "group": "inline"
        },
        {
          "command": "vedh.editNode",
          "when": "view == vedh.views",
          "group": "inline"
        },
        {
          "command": "vedh.editCommand",
          "when": "view == vedh.commands && viewItem == command",
          "group": "inline"
        },
        {
          "command": "vedh.editCommand",
          "when": "view == vedh.commands && viewItem == property",
          "group": "inline"
        },
        {
          "command": "vedh.copyCommandId",
          "when": "view == vedh.commands && viewItem == command",
          "group": "copy"
        },
        {
          "command": "vedh.copyCommandConfig",
          "when": "view == vedh.commands && viewItem == command",
          "group": "copy"
        },
        {
          "command": "vedh.editMenu",
          "when": "view == vedh.menus && viewItem == menuItem",
          "group": "inline"
        }
      ]
    },
    "commands": [
      {
        "command": "vedh.refresh",
        "title": "Refresh",
        "icon": "$(sync)"
      },
      {
        "command": "vedh.refreshCommands",
        "title": "Refresh Commands",
        "icon": "$(sync)"
      },
      {
        "command": "vedh.edit",
        "title": "Edit",
        "icon": "$(edit)"
      },
      {
        "command": "vedh.editNode",
        "title": "Edit Node",
        "icon": "$(edit)"
      },
      {
        "command": "vedh.editCommand",
        "title": "Edit Command",
        "icon": "$(edit)"
      },
      {
        "command": "vedh.copyCommandId",
        "title": "复制命令 ID",
        "icon": "$(copy)"
      },
      {
        "command": "vedh.copyCommandConfig",
        "title": "复制命令配置",
        "icon": "$(json)"
      },
      {
        "command": "vedh.refreshViewsContainers",
        "title": "Refresh ViewsContainers",
        "icon": "$(sync)"
      },
      {
        "command": "vedh.editViewContainer",
        "title": "Edit ViewContainer",
        "icon": "$(edit)"
      },
      {
        "command": "vedh.refreshMenus",
        "title": "Refresh Menus",
        "icon": "$(sync)"
      },
      {
        "command": "vedh.editMenu",
        "title": "Edit Menu",
        "icon": "$(edit)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "npm version patch --no-git-tag-version && tsc -p ./",
    "watch": "tsc -watch -p ./",
    "clean": "rm -rf out",
    "rebuild": "npm run clean && npm run compile",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "test": "vscode-test",
    "package": "npm version minor --no-git-tag-version && vsce package --allow-missing-repository -o ./out"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.8",
    "@types/node": "20.x",
    "@types/vscode": "^1.94.0",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^3.0.0",
    "eslint": "^9.11.1",
    "typescript": "^5.5.1-rc"
  }
}
